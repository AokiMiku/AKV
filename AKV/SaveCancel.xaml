<UserControl x:Class="AKV.SaveCancel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AKV"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel Height="23" >
        <Button Name="speichern" Click="speichern_Click" >
            <DockPanel>
                <Image Source="Resources/Icons/save.ico" />
                <Label Width="3" />
                <TextBlock Text="Speichern" />
            </DockPanel>
        </Button>
        <Label Width="10" />
        <Button Name="abbrechen" Click="abbrechen_Click" >
            <DockPanel>
                <Image Source="Resources/Icons/cancel.ico" />
                <Label Width="3" />
                <TextBlock Text="Abbrechen" />
            </DockPanel>
        </Button>
    </DockPanel>
</UserControl>
